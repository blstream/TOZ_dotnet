@using Microsoft.AspNetCore.Mvc.Localization
@model Toz.Dotnet.Models.Helper
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["Title"];
}
<div class="container-fluid center">
    <form class="form-horizontal" asp-controller="Helpers" asp-action="Add" method="POST" enctype="multipart/form-data">
        <fieldset class="pagetitle">
            <legend class="pagetitlelegend">@Localizer["PageTitle"]</legend>
            <div class="form-group row">
                <label class="col-sm-2 control-label">@Localizer["Category"]</label>
                <div class="col-sm-10">
                    <select asp-for="Category" class="form-control" id="Category">
                        <option value="0"></option>
                        <option value="1">@Localizer["Guardian"]</option>
                        <option value="2">@Localizer["TemporaryHouseCat"]</option>
                        <option value="3">@Localizer["TemporaryHouseDog"]</option>
                        <option value="4">@Localizer["TemporaryHouseOther"]</option>
                    </select>
                    <span class="glyphicon form-control-feedback"></span>
                    <span asp-validation-for="Category" class="help-block"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 control-label">@Localizer["FirstName"]</label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" id="Name">
                    <span class="glyphicon form-control-feedback"></span>
                    <span asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 control-label">@Localizer["LastName"]</label>
                <div class="col-sm-10">
                    <input asp-for="Surname" class="form-control" id="Surname">
                    <span class="glyphicon form-control-feedback"></span>
                    <span asp-validation-for="Surname"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 control-label">@Localizer["PhoneNumber"]</label>
                <div class="col-sm-10">
                    <input asp-for="PhoneNumber" class="form-control" id="PhoneNumber">
                    <span class="glyphicon form-control-feedback"></span>
                    <span asp-validation-for="PhoneNumber"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 control-label">@Localizer["Email"]</label>
                <div class="col-sm-10">
                    <input asp-for="Email" class="form-control" id="Email">
                    <span class="glyphicon form-control-feedback"></span>
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 control-label">@Localizer["Address"]</label>
                <div class="col-sm-10">
                    <input asp-for="Address" class="form-control" id="Address">
                    <span class="glyphicon form-control-feedback"></span>
                    <span asp-validation-for="Address"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 control-label">@Localizer["Notes"]</label>
                <div class="col-sm-10">
                    <input asp-for="Notes" class="form-control" id="Notes">
                    <span class="glyphicon form-control-feedback"></span>
                    <span asp-validation-for="Notes"></span>
                </div>
            </div>
            <div class="form-group row" style="text-align: center">
                <span class="unhandled-error-span">@ViewData["UnhandledError"]</span>
            </div>
            <input type="button" class="btn btn-warning btn-block" id="Cancel" data-dismiss="modal" value=@Localizer["Cancel"]>
            <input type="submit" class="btn btn-primary btn-block" id="Save" value=@Localizer["Save"]>
        </fieldset>
    </form>
</div>
<script src="~/js/modal.scripts.js"></script>