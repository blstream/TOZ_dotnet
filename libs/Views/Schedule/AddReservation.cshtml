@using Microsoft.AspNetCore.Mvc.Localization
@model Toz.Dotnet.Models.Schedule.ViewModels.ReservationViewModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["PageTitle"];
}

<div class="container-fluid center">
    <form class="form-horizontal" asp-controller="Schedule" asp-action="AddReservation" method="POST" enctype="multipart/form-data">
        <fieldset class="pagetitle">
            <legend class="pagetitlelegend">@Localizer["PageTitle"]</legend>
            <input type="hidden" asp-for="ReservationDate" class="form-control" id="Date" />
            <input type="hidden" asp-for="TimeOfDay" class="form-control" id="TimeOfDay" />

            <div class="form-group row">
                <label class="col-sm-2 control-label">@Localizer["Volunteer"]</label>
                <div class="col-sm-10">
                    <select asp-for="VolunteerId"
                            class="form-control"
                            asp-items="@Model.Volunteers">
                        <option disabled selected>@Localizer["SelectVolunteer"]</option>
                    </select>
                    <span class="glyphicon form-control-feedback"></span>
                    <span class="control-label" asp-validation-for="VolunteerId"></span>
                </div>
            </div>

            <div class="form-group row" style="text-align: center">
                <span class="unhandled-error-span">@ViewData["UnhandledError"]</span>
            </div>

            <input type="button" class="btn btn-warning btn-block" id="Cancel" data-dismiss="modal" value=@Localizer["Cancel"]>
            <input type="submit" class="btn btn-primary btn-block" id="AddReservation" value=@Localizer["Save"]>
        </fieldset>
    </form>
</div>