@using Microsoft.AspNetCore.Mvc.Localization
@model Toz.Dotnet.Models.ForgotPassword
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["PageTitle"];
}

<div class="container-fluid center">
    <form class="form-horizontal" asp-controller="Account" asp-action="ForgotPassword" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="POST" enctype="application/x-www-form-urlencoded">
        <fieldset class="pagetitle">
            <legend class="pagetitlelegend">@Localizer["PageTitle"]</legend>
            <fieldset>
                <div class="form-group row">
                    <label class="col-sm-2 control-label">@Localizer["Email"]</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="Email" class="form-control" id="Email">
                        <span class="glyphicon form-control-feedback"></span>
                        <span asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="form-group row" style="text-align: center">
                    @if (TempData["SendEmail"] == null)
                    {
                        <span class="unhandled-error-span">@ViewData["UnhandledError"]</span>
                    }
                    else
                    {
                        <span class="text-success">@Localizer[TempData["SendEmail"].ToString()]</span>
                    }
                </div>
            </fieldset>
            <input type="submit" class="btn btn-primary btn-block" id="SubmitReset" value=@Localizer["Submit"]>
            <input type="button" class="btn btn-warning btn-block" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" value="@Localizer["Cancel"]" />
        </fieldset>
    </form>
</div>