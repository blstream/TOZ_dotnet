@using Microsoft.AspNetCore.Mvc.Localization
@model Toz.Dotnet.Models.PetsStatus
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["Title"];
}

<link rel="stylesheet" href="~/css/site.min.css"/>

<div class="container-fluid center">
    <form class="form-horizontal" asp-controller="PetsStatus" asp-action="Edit" method="POST" enctype="multipart/form-data">
        <fieldset class="pagetitle">
            <legend class="pagetitlelegend">@Localizer["PageTitle"]</legend>

            <div class="form-group row">
                <label class="col-sm-2 control-label">@Localizer["Id"]</label>
                <div class="col-sm-10">
                    <input asp-for="Id" class="form-control" id="Id" disabled>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 control-label">@Localizer["Name"]</label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" id="Name">
                    <span class="glyphicon form-control-feedback"></span>
                    <span asp-validation-for="Name"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 control-label">@Localizer["RGB"]</label>
                <div class="col-sm-10">
                    <input asp-for="RGB" class="form-control" id="RGB" type="text">
                    <span class="glyphicon form-control-feedback"></span>
                    <span asp-validation-for="RGB"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 control-label">@Localizer["IsPublic"]</label>
                <div class="col-sm-10">
                    <div class="material-switch">
                        <input asp-for="IsPublic" id="IsPublic" name="IsPublic" type="checkbox"/>
                        <label for="IsPublic" class="label-success"></label>
                    </div>
                    <span class="glyphicon form-control-feedback"></span>
                    <span asp-validation-for="IsPublic"></span>
                </div>
            </div>

            <div class="form-group row" style="text-align: center">
                <span class="unhandled-error-span">@ViewData["UnhandledError"]</span>
            </div>

            <input type="button" class="btn btn-warning btn-block" id="Cancel" data-dismiss="modal" value=@Localizer["Cancel"]>
            <input type="submit" class="btn btn-primary btn-block" id="Save" value=@Localizer["Save"]>
        </fieldset>
    </form>
</div>

<link rel="stylesheet" href="~/lib/mjaalnir-bootstrap-colorpicker/dist/css/bootstrap-colorpicker.min.css" />
<script src="~/lib/mjaalnir-bootstrap-colorpicker/dist/js/bootstrap-colorpicker.min.js"></script>
<script src="~/js/modal.scripts.js"></script>

<script>
    $(function () {
        $('#RGB').colorpicker({
            color: "transparent"
        });
    });
</script>